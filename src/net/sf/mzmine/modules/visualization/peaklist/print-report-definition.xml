<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple/version 0.8.5" "http://jfreereport.sourceforge.net/report-085.dtd">
<report name="Peaks" pageformat="A4" orientation="portrait">




  <!-- ************* -->
  <!-- * FUNCTIONS * -->
  <!-- ************* -->
  <functions>
  
    <property-ref name="report.date"/>

    <function name="PageNumber" class="org.jfree.report.function.PageFunction"/>

    <function name="OverallCount" class="org.jfree.report.function.ItemCountFunction"/>
    
	<function name="PeakShape" class="org.jfree.report.function.PaintComponentFunction">
		<properties>
			<property name="field">PeakShapeComponentGenerator</property>
			<property name="element">shape</property>
			<property name="scale">3</property>
		</properties>
	</function>
	
	<expression name="PeakShapeComponentGenerator" class="org.jfree.report.modules.misc.beanshell.BSHExpression">
		<properties>
			<property name="expression"><![CDATA[
				Object getValue() {
					net.sf.mzmine.data.Peak peak = (net.sf.mzmine.data.Peak) dataRow.get("Peak shape");
					if (peak == null) return null;
					return new net.sf.mzmine.userinterface.components.PeakXICComponent(peak);
				
				}
			]]></property>
		</properties>
	</expression>
  
  </functions>

    <!-- ================= -->
    <!-- = REPORT HEADER = -->
    <!-- ================= -->
    <reportheader height="48" fontname="sansserif" fontsize="18" fsbold="true">

		<label x="0" y="0" width="100%" height="30" alignment="center" color="#000000">Detected peaks report</label>

    </reportheader>


    <!-- ================= -->
    <!-- = REPORT FOOTER = -->
    <!-- ================= -->
	<reportfooter height="48" fontname="serif" fontsize="18" fsbold="true">



	</reportfooter>


    <!-- =============== -->
    <!-- = PAGE HEADER = -->
    <!-- =============== -->
	<pageheader height="24" fontname="serif" fontsize="12" fsbold="true">
		<label x="0" y="0" width="144" height="20" alignment="center" color="#ff0000">aa</label>
	</pageheader>
	
    <!-- =============== -->
    <!-- = PAGE FOOTER = -->
    <!-- =============== -->
	<pagefooter height="24" fontname="sansserif" fontsize="8" fsbold="true" onfirstpage="true">


	    <number-field fieldname="PageNumber" x="0" y="0" width="100%" height="8" alignment="center" format="Page #0"></number-field>
	


	</pagefooter>

    <!-- ============= -->
    <!-- = ITEM BAND = -->
    <!-- ============= -->
	<items height="14" fontname="serif" fontsize="8">

		<number-field fieldname="ID" x="0" y="0" width="76" height="14" alignment="left" vertical-alignment="middle" format="0"></number-field>

		<image-field name="shape" x="100" y="0" width="100" height="14" fieldname="PeakShape" />
		
	</items>


</report>


