<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.* ?>
<?import javafx.scene.control.* ?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.cell.* ?>
<?import javafx.scene.image.* ?>
<?import net.sf.mzmine.modules.visualization.fx3d.* ?>
<?import org.controlsfx.glyphfont.Glyph ?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.sf.mzmine.modules.visualization.fx3d.Fx3DStageController" minWidth="400" minHeight="400">
     <top>
     	<HBox fx:id="hBox">
     		<padding><Insets top="15" right="12" bottom="15" left="12"/></padding>
	     	<Region fx:id="leftRegion"/>
	     		<Label fx:id="label"/>
		     <Region fx:id="rightRegion"/>
		</HBox>
     </top>
     <center>
       <Group fx:id="subSceneRootNode" onScroll="#onScrollHandler" onMousePressed="#handleMousePressed" onMouseDragged="#handleMouseDragged">
        </Group>     
     </center>
     <bottom>
      <ScrollPane fitToWidth="true" fitToHeight="true" minWidth="400" prefWidth="600" minHeight="50" prefHeight="150">
       <TableView fx:id="tableView" minHeight="50" prefHeight="150" editable="true">
           <columns>
	           <TableColumn fx:id="visibilityCol" editable="true" maxWidth="50" >
               		<cellValueFactory>
               			<PropertyValueFactory property="visibility"/>
               		</cellValueFactory>
               </TableColumn>
               <TableColumn fx:id="fileNameCol" text="Name" prefWidth="200">
               		<cellValueFactory>
               			<PropertyValueFactory property="fileName" />
               		</cellValueFactory>
               </TableColumn>
               <TableColumn fx:id="colorCol" text="Color" editable="true" prefWidth="200" >
               		<cellValueFactory>
               			<PropertyValueFactory property="color" />
               		</cellValueFactory>
               </TableColumn>
               <TableColumn fx:id="opacityCol" text="Opacity" editable="true" prefWidth="200" >
               		<cellValueFactory>
               			<PropertyValueFactory property="opacity"/>
               		</cellValueFactory>
               </TableColumn>
           </columns>
        </TableView>
       </ScrollPane>
     </bottom>
     <right>
     <ToolBar orientation="VERTICAL">
            <items>
                <Button onAction="#handleZoomOut">
                    <graphic>
                    	<Glyph fontFamily="FontAwesome" icon="ARROWS_ALT" />
                    </graphic>
                    <tooltip>
                        <Tooltip text="Zoom out" />
                    </tooltip>
                </Button>
                <ToggleButton fx:id="animateBtn" onAction="#handleAnimate">
                    <graphic>
                    	<Glyph fontFamily="FontAwesome" icon="REFRESH" />
                    </graphic>
                    <tooltip>
                        <Tooltip text="Animate" />
                    </tooltip>
                </ToggleButton>
                <ToggleButton fx:id="axesBtn" onAction="#handleAxis">
                  <graphic>
 		                <Glyph fontFamily="FontAwesome" icon="AREA_CHART" />
                  </graphic>
                  <tooltip>
                      <Tooltip text="Axes ON/OFF" />
                  </tooltip>
               </ToggleButton>
            </items>
        </ToolBar>
    </right>
</BorderPane>