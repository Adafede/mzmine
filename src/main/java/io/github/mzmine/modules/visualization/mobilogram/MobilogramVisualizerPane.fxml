<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import io.github.mzmine.gui.chartbasics.gui.javafx.template.*?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.mzmine.modules.visualization.mobilogram.MobilogramVisualizerController">
  <children>
    <BorderPane layoutX="100.0" layoutY="30.0" prefHeight="400.0" prefWidth="600.0"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
      AnchorPane.topAnchor="0.0">
      <center>
        <SimpleXYLineChart fx:id="mobilogramChart"/>
      </center>
      <right>
        <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
          <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              </rowConstraints>
              <children>
                <Label text="Raw data file"/>
                <Label text="Frame id" GridPane.rowIndex="1"/>
                <Label text="Mobilogram" GridPane.rowIndex="2"/>
                <ComboBox fx:id="rawDataFileSelector" onAction="#onRawDataFileSelectionChanged"
                  prefWidth="150.0" GridPane.columnIndex="1"/>
                <ComboBox fx:id="frameSelector" onAction="#onFrameSelectionChanged"
                  prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ComboBox fx:id="mobilogramSelector" onAction="#onMobilogramSelectionChanged"
                  prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
              </children>
            </GridPane>
          </children>
        </VBox>
      </right>
    </BorderPane>
  </children>
</AnchorPane>
